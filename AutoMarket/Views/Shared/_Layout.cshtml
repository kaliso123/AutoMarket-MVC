<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - AutoMarket</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/AutoMarket.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3 fixed-top">
            <div class="container-fluid">
                <!-- AutoMarket logo as the navbar brand -->
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">
                    <img src="/uploads/AutoMarket.png" alt="AutoMarket Logo" class="img-fluid" style="max-height: 40px;" />
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item @(Context.Request.Path == "/" ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Home/Privacy") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
                        </li>
                        <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Cars") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Cars" asp-action="Index">Cars</a>
                        </li>
                        <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Motorcycles") ? "active" : "")">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Motorcycles" asp-action="Index">Motorcycles</a>
                        </li>
                        @if (User.IsInRole("Admin"))
                        {
                            <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Admin/Home/Index") ? "active" : "")">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="Home" asp-action="Index">Admin-Dashboard</a>
                            </li>
                        }
                        @if (User.IsInRole("User"))
                        {
                            <li class="nav-item @(Context.Request.Path.StartsWithSegments("/Admin/UserListings/MyCars") ? "active" : "")">
                                <a class="nav-link text-dark" asp-area="Admin" asp-controller="UserListings" asp-action="MyCars">User-Dashboard</a>
                            </li>
                        }
                    </ul>
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="mt-5 pt-4">
            @RenderBody()
        </main>
    </div>

    <footer class="bg-light text-dark mt-5">
        <div class="container py-4">
            <div class="row">
                <div class="col-md-4">
                    <h5>AutoMarket</h5>
                    <p>&copy; 2023 AutoMarket. All rights reserved.</p>
                </div>
                <div class="col-md-4">
                    <h5>Quick Links</h5>
                    <ul class="list-unstyled">
                        <li><a href="/" class="text-dark">Home</a></li>
                        <li><a href="/cars" class="text-dark">Cars</a></li>
                        <li><a href="/motorcycles" class="text-dark">Motorcycles</a></li>
                        <li><a href="/home/privacy" class="text-dark">Privacy</a></li>
                    </ul>
                </div>
                <div class="col-md-4">
                    <h5>Contact Us</h5>
                    <ul class="list-unstyled">
                        <li>Email: info@automarket.com</li>
                        <li>Phone: +1 (555) 123-4567</li>
                        <li>Address: 1234 Main St, Anytown, USA</li>
                    </ul>
                </div>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
