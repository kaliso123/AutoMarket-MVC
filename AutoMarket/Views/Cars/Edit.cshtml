@section Scripts {
    <script>
        $(document).ready(function () {
            $('#CarBrandId').change(function () {
                var brandId = $(this).val();
                if (brandId) {
                    $.ajax({
                        url: '@Url.Action("GetModelsByBrand", "Cars")',
                        type: 'GET',
                        data: { brandId: brandId },
                        success: function (data) {
                            $('#CarModelId').empty();
                            $.each(data, function (i, model) {
                                $('#CarModelId').append($('<option></option>').val(model.value).text(model.text));
                            });
                        }
                    });
                } else {
                    $('#CarModelId').empty();
                }
            });
        });
    </script>
}
